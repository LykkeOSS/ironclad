@inject WebsiteSettings websiteSettings

@{
    ViewData["Title"] = "Password successfully changed";
}

<header class="header">
    <div class="container-fluid">
        <a href="~/" class="navbar-brand">
            <img src="~/@websiteSettings.DarkLogo" width="132">
        </a>
    </div>
</header>
<div class="content row justify-content-center">
    <div class="content_center col-11 col-md-7 col-xl-8 text-center">
        <section class="content_form">
            <div class="content_header">
                <img src="/img/forgot_pass_success.svg" width="277px" alt="forgot_pass" />
                <h1 class="h2">@ViewData["Title"]</h1>
            </div>
            <div class="row justify-content-center">
                <div class="col-sm-8">
                    <div class="form-group">
                        <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" class="btn btn-primary btn-block btn-lg">Log in</a>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>