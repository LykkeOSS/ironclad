@model ForgotPasswordModel
@inject WebsiteSettings websiteSettings
    
@{
    ViewData["Title"] = "Forgot your password?";
}
<header class="header">
    <div class="container-fluid">
        <a href="~/" class="navbar-brand">
            <img src="~/@websiteSettings.DarkLogo" width="132">
        </a>
    </div>
</header>
<div class="content row justify-content-center">
    <div class="content_center col-11 col-md-7 col-xl-8 text-center">
        <section class="content_form">
            <div class="content_header">
                <img src="/img/forgot_pass.svg" width="277px" alt="forgot_pass"/>
                <h1 class="h2">@ViewData["Title"]</h1>
                <div class="row justify-content-center">
                    <div class="col-sm-8">
                        <p class="text-center">
                            Enter your email and we'll send you a
                            link to get back into your account.
                        </p>
                    </div>
                </div>
            </div>

            <form asp-action="ForgotPassword" method="post">
                <div asp-validation-summary="All" class="text-danger form-group"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="row justify-content-center">
                    <div class="col-sm-8">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block btn-lg">Continue</button>
                            <p class="muted text-center form-hint">
                                <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">Back to sign in</a>
                            </p>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>
