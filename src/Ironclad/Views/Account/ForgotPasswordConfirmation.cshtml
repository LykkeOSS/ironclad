@inject WebsiteSettings websiteSettings

@{
    ViewData["Title"] = "Forgot password confirmation";
}

<header class="header">
    <div class="container-fluid">
        <a href="~/" class="navbar-brand">
            <img src="~/@websiteSettings.DarkLogo" width="132">
        </a>
    </div>
</header>
<div class="content row justify-content-center">
    <div class="content_center col-11 col-md-7 col-xl-8 text-center">
        <section class="content_form">
            <div class="content_header">
                <img src="/img/forgot_pass.svg" width="277px" alt="forgot_pass" />
                <h1 class="h2">Email sent</h1>
                <p>
                    We've sent you an email with link
                    to reset your password.
                </p>
            </div>
            <div class="row justify-content-center">
                <div class="col-sm-8">
                    <div class="form-group">
                        <!--<button type="submit" class="btn btn-primary btn-block btn-lg">Return home</button>-->
                        <p class="muted text-center form-hint">
                            <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">Back to sign in</a>
                        </p>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>