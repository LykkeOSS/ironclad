@model LogoutModel
@inject WebsiteSettings websiteSettings

<header class="header">
    <div class="container-fluid">
        <a href="~/" class="navbar-brand">
            <img src="~/@websiteSettings.DarkLogo" width="132">
        </a>
    </div>
</header>
<div class="content row justify-content-center">
    <div class="content_center col-11 col-md-7 col-xl-8 text-center">
        <section class="content_form">
            <div class="content_header">
                <h1 class="h2">Logout</h1>
                <p class="lead">
                    Would you like to logout of IdentityServer?
                </p>
            </div>
            <form asp-action="Logout">
                <input type="hidden" name="logoutId" value="@Model.LogoutId" />
                <fieldset>
                    <div class="row justify-content-center">
                        <div class="col-sm-8">
                            <div class="form-group">
                                <button class="btn btn-primary btn-lg btn-block">Yes</button>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </form>
        </section>
    </div>
</div>
