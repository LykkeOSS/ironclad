@model LoginWithRecoveryCodeModel
@inject WebsiteSettings websiteSettings
@{
    ViewData["Title"] = "Recovery code verification";
}
<header class="header">
    <div class="container-fluid">
        <a href="~/" class="navbar-brand">
            <img src="~/@websiteSettings.DarkLogo" width="132">
        </a>
    </div>
</header>
<div class="content row justify-content-center">
    <div class="content_center col-11 col-md-7 text-center">
        <section class="content_form">
            <div class="content_header">
                <h1 class="h2">@ViewData["Title"]</h1>
                <p>
                    You have requested to login with a recovery code. This login will not be remembered until you provide
                    an authenticator app code at login or disable 2FA and login again.
                </p>
            </div>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger form-group"></div>
                <div class="form-group">
                    <label asp-for="RecoveryCode" class="control-label"></label>
                    <input asp-for="RecoveryCode" class="form-control" autocomplete="off" />
                    <span asp-validation-for="RecoveryCode" class="text-danger"></span>
                </div>
                <div class="row justify-content-center">
                    <div class="col-sm-8">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block btn-lg">Log in</button>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>